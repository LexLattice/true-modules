{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://true-modules/spec/compose.schema.json",
  "title": "Compose Plan",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "modules"
  ],
  "properties": {
    "run_id": {
      "type": "string"
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "version"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_.-]+$"
          },
          "version": {
            "type": "string"
          }
        }
      }
    },
    "wiring": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "from",
          "to"
        ],
        "additionalProperties": false,
        "properties": {
          "from": {
            "type": "string",
            "pattern": "^([a-z][a-z0-9_.-]+|orchestrator):[A-Za-z][A-Za-z0-9]*$"
          },
          "to": {
            "type": "string",
            "pattern": "^([a-z][a-z0-9_.-]+|orchestrator):[A-Za-z][A-Za-z0-9]*$"
          }
        }
      }
    },
    "glue": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "from",
          "to",
          "version"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_.-]+$"
          },
          "from": {
            "type": "string",
            "pattern": "^[A-Za-z][A-Za-z0-9]*$"
          },
          "to": {
            "type": "string",
            "pattern": "^[A-Za-z][A-Za-z0-9]*$"
          },
          "version": {
            "type": "string"
          }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}