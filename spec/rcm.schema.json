{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Requirement Coverage Matrix",
  "type": "object",
  "required": [
    "requirements"
  ],
  "properties": {
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "text"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "priority": {
            "enum": [
              "P0",
              "P1",
              "P2",
              "P3"
            ]
          },
          "must": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}