{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://true-modules/spec/coverage.schema.json",
  "title": "Coverage Matrix",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "goals",
    "variants",
    "provides"
  ],
  "properties": {
    "goals": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "provides": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "module",
          "covers"
        ],
        "additionalProperties": false,
        "properties": {
          "module": {
            "type": "string"
          },
          "covers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "provides_ports": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "requires": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "risk": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "evidence_strength": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "weights": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    }
  }
}