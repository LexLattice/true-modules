{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Spec Density (SSD)",
  "type": "object",
  "required": [
    "threshold"
  ],
  "properties": {
    "rcm_coverage": {
      "type": "object",
      "required": [
        "must_total",
        "covered",
        "uncovered"
      ],
      "properties": {
        "must_total": {
          "type": "integer"
        },
        "covered": {
          "type": "integer"
        },
        "uncovered": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "per_slate": {
      "type": "object"
    },
    "summary": {
      "type": "object",
      "properties": {
        "overall_min": {
          "type": "number"
        },
        "min_by_layer": {
          "type": "object"
        }
      }
    },
    "threshold": {
      "type": "number"
    }
  }
}