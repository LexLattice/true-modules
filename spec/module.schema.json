{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://true-modules/spec/module.schema.json",
  "title": "True Module Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "version",
    "summary",
    "provides"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z-.]+)?(\\+[0-9A-Za-z-.]+)?$"
    },
    "summary": {
      "type": "string",
      "minLength": 3
    },
    "provides": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[A-Za-z][A-Za-z0-9]*Port@\\d+$"
      }
    },
    "requires": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Za-z][A-Za-z0-9]*Port@\\d+$"
      }
    },
    "inputs": {
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "string"
        }
      ]
    },
    "outputs": {
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "string"
        }
      ]
    },
    "side_effects": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "FS:read",
          "FS:write",
          "Process:git",
          "Process:shell",
          "Network"
        ]
      }
    },
    "invariants": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "kind"
        ],
        "additionalProperties": false,
        "properties": {
          "kind": {
            "type": "string",
            "enum": [
              "patch",
              "file",
              "test"
            ]
          },
          "file": {
            "type": "string"
          },
          "lines": {
            "type": "string",
            "pattern": "^[0-9]+-[0-9]+$"
          },
          "commit": {
            "type": "string"
          },
          "patchId": {
            "type": "string"
          },
          "note": {
            "type": "string"
          }
        }
      }
    }
  }
}