{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://true-modules/spec/report.schema.json",
  "title": "Unified Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "context"
  ],
  "properties": {
    "context": {
      "type": "object",
      "required": [
        "run_id"
      ],
      "properties": {
        "run_id": {
          "type": "string"
        },
        "variant_id": {
          "type": "string"
        },
        "commit": {
          "type": "string"
        },
        "generated_at": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "option",
          "rationale"
        ],
        "properties": {
          "option": {
            "type": "string"
          },
          "rationale": {
            "type": "string"
          },
          "rejected_alternatives": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "variant",
                "reason"
              ],
              "properties": {
                "variant": {
                  "type": "string"
                },
                "reason": {
                  "type": "string"
                },
                "confidence": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "goals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "status"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "partial",
              "n/a"
            ]
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "rejected_alternatives": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "variant",
                "reason"
              ],
              "properties": {
                "variant": {
                  "type": "string"
                },
                "reason": {
                  "type": "string"
                },
                "confidence": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "version"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "ports": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "proofs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "risks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "residual_risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "followups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "priority"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": [
              "P0",
              "P1",
              "P2",
              "P3"
            ]
          },
          "owner": {
            "type": "string"
          },
          "pointer": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  }
}
