{
  "name": "windows normalization",
  "normalize": [
    { "input": "C:/Temp/../Logs", "expect": "C:\\Logs" },
    { "input": "c:/Mixed/Case/../Path", "expect": "C:\\Mixed\\Path" },
    { "input": "C\\Folder\\..\\", "expect": "C:\\" },
    { "input": "//Server/Share//dir", "expect": "\\\\Server\\Share\\dir" },
    { "input": "\\\\?\\UNC\\FileSrv\\Share\\data", "expect": "\\\\FileSrv\\Share\\data" },
    { "input": "/mnt/c/Users/demo", "expect": "C:\\Users\\demo" },
    { "input": "  \\wsl$\\Ubuntu\\home\\user  ", "expect": "\\\\wsl$\\Ubuntu\\home\\user" }
  ],
  "safe": [
    "C:\\Users\\Public",
    "C:/Temp/file.txt",
    { "path": "\\\\?\\C:\\Windows", "expected": true }
  ],
  "unsafe": [
    "C:\\Temp\\..\\..\\Windows\\System32",
    "\\\\Server\\Share\\file.txt",
    "C:\\path\\NUL.txt",
    "   "
  ]
}
